<% if @team.owner == @current_user.email %>
  <p>You are the team owner: <%= link_to 'Edit', edit_team_path(@team) %></p>
<% end %>

<h1><%= @team.name.titlecase %> Team Page</h1>
<p>Request to Join team</p>
<h3>Players:</h3>
<ul>
  <% @team.users.each do |user| %>
    <li><%= image_tag(user.avatar.url(:thumb)) %> <%= link_to user.name, user_path(user) %></li>
  <% end %>
</ul>
