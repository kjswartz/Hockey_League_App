<div class="table-responsive statictablewrapper">
  <table class="table">
    <h3>Players Schedule: <small><a id="eventcalendarModal">Add a Calendar Event</a></small></h3>
      <thead>
        <tr>
          <th>Player</th>
          <th>Start Date</th>
          <th>Stop Date</th>
          <th>Event</th>
          <th colspan="1"></th>
        </tr>
      </thead>
    <tbody>
      <% @events.current(2.day.ago).each do |e| %>
        <tr style="background:white;">
          <td><%= e.user.name %></td>
          <td><%= e.start_date.strftime("%a %b, %e") %></td>
          <td><%= e.stop_date.strftime("%a %b, %e") %></td>
          <td><%= e.description %></td>
          <% if e.user.id == current_user.id %>
            <td><%= link_to 'Delete Event', [@team.league, @team, e], method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% else %>
            <td></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
