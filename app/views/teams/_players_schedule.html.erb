<% if signed_in? && current_user.team_member?(@team) %>
  <div class="table-responsive" style="max-width:550px;">
    <table class="table">
      <h3>Players Schedule</h3>
        <thead>
          <tr>
            <th>Player</th>
            <th>Start Date</th>
            <th>Stop Date</th>
            <th>Event</th>
            <th colspan="1"></th>
          </tr>
        </thead>
      <tbody>
        <% @events.each do |e| %>
          <tr>
            <td><%= e.user.name %></td>
            <td><%= e.start_date.strftime("%a %b, %e") %></td>
            <td><%= e.stop_date.strftime("%a %b, %e") %></td>
            <td><%= e.description %></td>
            <% if e.user.id == current_user.id %>
              <td><%= link_to 'Delete Event', [@team.league, @team, e], method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% else %>
              <td></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>
