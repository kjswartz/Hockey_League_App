<div class="scheduletablewrapper">
  <div class="table-responsive" style="max-width:800px;">
    <table class="table">
    <h3>
      Schedule: <%= Time.zone.now.strftime("%a %b, %e") %> - <%= 1.week.from_now.strftime("%a %b, %e") %>
    </h3>
      <thead>
        <tr>
          <th>Date</th>
          <th>Time</th>
          <th>Home Team</th>
          <th>Away Team</th>
        </tr>
      </thead>
      <tbody>
        <% @team_weekly_games.each do |game| %>
        <tr>
          <td><%= game.time.strftime("%A %B, %e") %></td>
          <td><%= game.time.strftime("%R") %></td>
          <td><%= game.home_team.name %></td>
          <td><%= game.away_team.try(:name) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>
