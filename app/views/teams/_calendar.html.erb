<h1>Add Event to Schedule</h1>
<%= bootstrap_form_for([@team, @event]) do |f| %>
  <%= f.alert_message 'Please fix the following errors:' %>
  <%= f.datetime_select :game_time %>
  <%= f.collection_select :opponent_id, Team.order("name ASC").where(league_id: @team.league_id), :id, :name, {include_blank: true, hide_label: true}, {class: 'chosen-select'} %>
  <%= f.submit :submit %>
<% end %>
