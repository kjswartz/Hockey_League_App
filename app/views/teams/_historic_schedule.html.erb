<div class="scheduletablewrapper">
  <div class="table-responsive">
    <table class="table">
      <h3>Prior Games</h3>
      <thead>
        <tr>
          <th>Date</th>
          <th>Time</th>
          <th>Home Team</th>
          <th>Goals</th>
          <th>Away Team</th>
          <th>Goals</th>
          <th>Game Winner</th>
        </tr>
      </thead>
      <tbody>
        <% @team.games.prior_games(Time.zone.now).each do |game| %>
        <tr>
          <td><%= game.time.strftime("%A %B, %e") %></td>
          <td><%= game.time.strftime("%R") %></td>
          <td><%= game.home_team.name %></td>
          <td><%= game.home_goals %></td>
          <td><%= game.away_team.try(:name) %></td>
          <td><%= game.away_goals %></td>
          <td><%= game.winner.name %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
