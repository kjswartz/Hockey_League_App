<div class="searchtablewrapper">
<%= bootstrap_form_for(@user) do |f| %>
  <%= f.alert_message 'Please fix the following errors:' %>
  <%= f.text_field :name %>
  <%= f.email_field :email %>
  <%= f.password_field :password %>
  <%= f.file_field :avatar %>
  <%= f.hidden_field :avatar_cache %>
  <%= image_tag(@user.avatar.url(:thumb)) if @user.avatar? %>
  <%= f.check_box :remove_avatar, label: 'Remove avatar' %>
  <%= f.text_field :phone %>
  <%= f.text_area :bio %>
  <%= f.submit "Submit" %>
<% end %>
</div>
