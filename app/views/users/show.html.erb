<div class="row">

  <div class="col-md-3 col-md-offset-1">
    <h1><%= @user.name %></h1>
    <%= image_tag(@user.avatar.url) %>

    <br>
    <% if @user.profile?(@user, current_user) %>
      <%= link_to 'Edit Profile', edit_user_path(@user) %>
    <% end %>

    <br>
    Contact Information:
    <li>Email: <%= @user.email %></li>
    <li>Phone: <%= @user.phone %></li>
    About:
    <li><%= @user.bio %></li>
  </div>

  <div class="col-md-6">
    <h3>Player Stats</h3>
  </div>

  <div class="col-md-7">
    <%= render 'player_team_stats' %>
  </div>

</div>

<div class="row">
  <div class="col-md-4">
    <br><br><br><br>
  </div>
</div>
