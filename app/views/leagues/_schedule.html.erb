<div class="searchtablewrapper">
  <div class="display responsive no-wrap">
    <table id="lstable" class="table-condensed">
      <h3>Season Schedule</h3>
        <thead>
          <tr>
            <th>Date</th>
            <th>Time</th>
            <th>Home Team</th>
            <th>Away Team</th>
          </tr>
        </thead>
        <tbody>
          <% @league_current_games.each do |game| %>
          <tr>
            <td><%= game.time.strftime("%a %b, %e") %></td>
            <td><%= game.time.strftime("%R") %></td>
            <td><%= game.home_team.name %></td>
            <td><%= game.away_team.try(:name) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
