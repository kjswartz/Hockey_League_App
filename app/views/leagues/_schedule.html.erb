<div class="table-responsive" style="max-width:800px;">
  <table class="table">
    <h3>
      Schedule:
      <small>
      <% if signed_in? && current_user.admin? %>
        <%= link_to 'Add a Game', new_league_game_path(@league) %>
      <% end %>
    </small>
    </h3>
      <thead>
        <tr>
          <th>Date</th>
          <th>Time</th>
          <th>Home Team</th>
          <th>Away Team</th>
        </tr>
      </thead>
      <tbody>
        <% @league.games.each do |game| %>
        <tr>
          <td><%= game.time.strftime("%A %B, %e") %></td>
          <td><%= game.time.strftime("%R") %></td>
          <td><%= game.home_team.name %></td>
          <td><%= game.away_team.try(:name) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
